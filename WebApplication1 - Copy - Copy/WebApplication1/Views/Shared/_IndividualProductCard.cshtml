@model WebApplication1.Models.Product

<div class="col-lg-4 col-md-6 pb-4 filter @Model.Category.Name.Replace(" ", "_")">
    <div class="card h-100 border-dark shadow-sm rounded-4 overflow-hidden" style="transition: all 0.3s ease; min-height: 550px; border-radius:25px">

        <!-- Image -->
        <img src="@WC.ImagePaht@Model.Image" class="card-img-top img-fluid" alt="@Model.Name" style="height: 450px; border-radius:10px 15px">

        <div class="card-body d-flex flex-column justify-content-between">
            <div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="card-title mb-0 text-truncate" title="@Model.Name">@Model.Name</h5>
                    <span class="text-primary fw-bold">@Model.Price.ToString("C")</span>
                </div>
                <span class="badge bg-light text-dark border">@Model.Category.Name</span>
            </div>
        </div>

        <!-- Footer -->
        <div class="card-footer bg-transparent border-0 mt-auto">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark w-100 btn-sm rounded-pill">
                View Details
            </a>
        </div>

    </div>
</div>

<style>
    .card:hover {
        transform: scale(1.03);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.25);
    }
</style>
