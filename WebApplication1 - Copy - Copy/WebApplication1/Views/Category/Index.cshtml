@model IEnumerable<WebApplication1.Models.Category>

<div class="container p-3">
    <div class="row pt-4"> 
        <div class="col-6">
            <h2 class="text-danger pl-3"> Category List</h2>

        </div>
        <div class="col-6  text-right " >
            <a asp-controller="Category"  asp-action="Create" class="btn btn-dark">
                    Crearte New Category           
            </a>
        </div>
    </div>
    <br /><br />

    @if(Model.Count() > 0  )
    {
        <table class="table table-bordered  table-striped" style="width:100%">
        <thead>
            <tr>
                <th> Category Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%" >@obj.Name  </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-dark mx-2">
                                     Edit
                                </a>
                                <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                   Delete
                                </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
        </table>
    }
    else
    {
        <p> No Category Exist </p>
    }

</div>

