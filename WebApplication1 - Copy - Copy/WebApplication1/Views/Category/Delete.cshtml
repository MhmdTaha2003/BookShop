@model WebApplication1.Models.Category

<form method="post" asp-action="DeletePost">
    <div class="border p-3">
  <input asp-for="Id" hidden /> 
        <div class="form-group row">
            <h2 class="text-danger pl-3"> Delete Category</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">

                        <input asp-for="Name" disabled class="form-control" />
                    
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-dark w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-light w-100">
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>



    </div>
</form>

